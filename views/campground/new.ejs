<% layout('layout/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form class="validated-form" action="/campground" method="post" novalidate>

      <div class="mb-3">
        <label class="form-label" for="title">Title: </label>
        <input class="form-control" type="text" id="title" name="campground[title]" required>
        <div class="valid-feedback">Better!</div>
        <!--* name attribute of title - is grouped under campground  -->
      </div>
    
      <div class="mb-3">
        <label class="form-label" for="location">Location: </label>
        <input class="form-control" type="text" id="location" name="campground[location]" required>
        <div class="valid-feedback">Looks Great!</div>
        <!--* name attribute of location - is grouped under campground  -->
      </div>
  
      <div class="mb-3">
        <label class="form-label" for="image">Image URL </label>
        <input class="form-control" type="text" id="image" name="campground[image]" required>
        <div class="valid-feedback">âœ…</div>
        <!--* name attribute of IMAGE - is grouped under campground  -->
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" name="campground[price]" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
          <div class="valid-feedback">Better!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description </label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
        <div class="valid-feedback">Better!</div>
        <!--* name attribute of description - is grouped under campground  -->
      </div>
  
      <div class="md-3"> 
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>  
