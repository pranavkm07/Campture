<% layout('layout/boilerplate') %>

  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form class="validated-form" action="/campground/<%= campground.id%>?_method=PUT" method="post" novalidate>
        <!-- * novalidate indicates the browser to not validate the form instead lets bootstrap do the validation  -->

        <div class="mb-3">
          <label class="form-label" for="title">Title: </label>
          <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>"
            required>
          <div class="valid-feedback">Better!</div>

          <!--* name attribute of title - is grouped under campground  -->
        </div>

        <div class="mb-3">
          <label class="form-label" for="location">Location: </label>
          <input class="form-control" type="text" id="location" name="campground[location]"
            value="<%= campground.location %>" required>
          <div class="valid-feedback">Better!</div>

          <!--* name attribute of location - is grouped under campground  -->
        </div>

        <div class="mb-3">
          <label class="form-label" for="image">Image URL </label>
          <input class="form-control" type="text" id="image" name="campground[image]" value="<%= campground.image %>"
            required>
          <div class="valid-feedback">Better!</div>

          <!--* name attribute of IMAGE - is grouped under campground  -->
        </div>

        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" name="campground[price]" class="form-control" id="price" value="<%= campground.price %>"
              placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
          </div>
          <div class="valid-feedback">Better!</div>

        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description </label>
          <textarea rows="5" class="form-control" type="text" id="description" name="campground[description]"
            required><%= campground.description %></textarea>
          <div class="valid-feedback">Better!</div>

          <!--* name attribute of description - is grouped under campground  -->
        </div>

        <div class="mb-3">
          <button class="btn btn-info">Update Campground</button>
        </div>
        <a class="mb-3 btn btn-dark" href="/campground/<%= campground.id%>">Cancel</a>

      </form>
    </div>
  </div>